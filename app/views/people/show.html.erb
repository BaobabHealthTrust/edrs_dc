			function markForApproval(){
					var url = "/dc/approve_record/<%= @person.id%>?next_url=<%=params[:next_url]%>";
				  	if (__$("msg.shield")) {
                              document.body.removeChild(__$("msg.shield"));
                     }
                     ajaxGETRequest(url,function(data){
                     	var data = JSON.parse(data);

                     	if(data.marked && eval(data.marked)){
                     		setTimeout(function(){
                     			checkApprovalStatus('/dc/check_approval_status/<%= @person.id%>')
                     		},100);
                     	}
                     	if(data.incomplete && eval(data.incomplete)){
