            <sub id="physical_address" name="Physical address">

               <%= text_field_tag "person[current_country]", nil, {
                      :helpText => "Country (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                      :ajaxURL => "/countries?search_string="} %>

              <%= text_field_tag "person[current_district]", nil, {
                  :helpText => "District (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                                :condition => "__$('person_current_country').value.toLowerCase().match('malawi')",
                                :ajaxURL =>"/districts?search_string=",:tt_onUnLoad => "setAjaxUrl(6)"} %>

                <%= text_field_tag "person[current_ta]", nil, {
                        :helpText => "Traditional Authority (<i>Physical residential address</i>)  <i style='color: red'>*</i>",
                        :condition => "__$('person_current_country').value.toLowerCase().match('malawi')",
                        :tt_onUnLoad => "setAjaxUrl(7)"} %>

                <%= text_field_tag "person[other_current_ta]", nil, {
                        :helpText => "Other Traditional Authority specify (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                        :condition => "__$('person_current_ta').value =='Other'"} %>

                <%= text_field_tag "person[current_village]", nil, {
                        :helpText => "Village (<i>Physical residential address</i>)  <i style='color: red'>*</i>",
                        :condition => "__$('person_current_ta').value.length > 0 && __$('person_current_ta').value != 'Other'"} %>

                <%= text_field_tag "person[other_current_village]", nil, {:helpText => "Other Village specify(<i>Physical residential address</i>)  <i style='color: red'>*</i>",:condition => "__$('person_current_ta').value =='Other' || __$('person_current_village').value =='Other'", :tt_onLoad=>"setOtherTofield('person_current_village')"} %>

                
                <%= text_field_tag "person[current_foreign_state]", nil, {
                  :helpText => "State (<i>Foreign physical residential address</i>)",
                  :optional => true,
                  :condition => "__$('person_current_country').value.toLowerCase() !='malawi'"} %>

                <%= text_field_tag "person[current_foreign_district]", nil, {
                  :helpText => "District (<i>Foreign physical residential address</i>)",
                  :optional => true,
                  :condition => "__$('person_current_country').value.toLowerCase() !='malawi'"} %>

                <%= text_field_tag "person[current_foreign_village]", nil, {
                        :helpText => "Village/Town (<i>Foreign physical residential address</i>)",
                        :optional => true,
                        :condition => "__$('person_current_country').value.toLowerCase() !='malawi'"} %>

            </sub>