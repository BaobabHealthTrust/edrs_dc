            <sub id="physical_address" name="Physical address">
              <%= select_tag("person[physical_address_available]",options_for_select([" ", "Yes", "No"], nil),:helpText =>"Physical address details available?",:tt_requireNextClick => false) %>

              <% if false %>
                    <%= text_field_tag "person[current_country]", @person[:current_country], {
                      :helpText => "Country (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                      :ajaxURL => "/countries?special=true&search_string=" ,:allowFreeText => true,:condition => "__$('person_physical_address_available').value =='Yes'"} %>
               <%else%>
                        <input type="hidden" name="person[current_country]" id="person_current_country" value="Malawi">
              <%end%>

              <%= text_field_tag "person[current_district]", @person[:current_district], {
                  :helpText => "District (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                                :condition => "__$('person_current_country').value.toLowerCase().match('malawi')",
                                :ajaxURL =>"/districts?special=true&search_string=",:tt_onUnLoad => "setAjaxUrl(6)"} %>

                <%= text_field_tag "person[current_ta]",@person[:current_ta] , {
                        :helpText => "Traditional Authority (<i>Physical residential address</i>)  <i style='color: red'>*</i>",
                        :condition => "__$('person_current_country').value.toLowerCase().match('malawi')",
                        :tt_onUnLoad => "setAjaxUrl(7)"} %>

                <%= text_field_tag "person[other_current_ta]", @person[:other_current_ta], {
                        :helpText => "Other Traditional Authority specify (<i>Physical residential address</i>) <i style='color: red'>*</i>",
                        :condition => "__$('person_current_ta').value =='Other'"} %>

                <%= text_field_tag "person[current_village]",@person[:current_village], {
                        :helpText => "Village (<i>Physical residential address</i>)  <i style='color: red'>*</i>",
                        :condition => "__$('person_current_ta').value.length > 0 && __$('person_current_ta').value != 'Other'"} %>

                <%= text_field_tag "person[other_current_village]",@person[:other_current_village], 
                      {:helpText => "Other Village specify(<i>Physical residential address</i>)  <i style='color: red'>*</i>",
                      :condition => "__$('person_current_ta').value =='Other' || __$('person_current_village').value =='Other'", :tt_onLoad=>"setOtherTofield('person_current_village')"} %>

                
                <%= text_field_tag "person[current_foreign_state]", @person[:current_foreign_state], {
                  :helpText => "State (<i>Foreign physical residential address</i>)",
                  :optional => true,
                  :condition => "__$('person_current_country').value.toLowerCase() !='malawi' && __$('person_current_country').value.toLowerCase() !='Unknown' && __$('person_physical_address_available').value =='Yes'"} %>

                <%= text_field_tag "person[current_foreign_district]", @person[:current_foreign_district], {
                  :helpText => "District (<i>Foreign physical residential address</i>)",
                  :optional => true,
                  :condition => "__$('person_current_country').value.toLowerCase() !='malawi' && __$('person_current_country').value.toLowerCase() !='Unknown' && __$('person_physical_address_available').value =='Yes'"} %>

                <%= text_field_tag "person[current_foreign_village]", @person[:current_foreign_village], {
                        :helpText => "Village/Town (<i>Foreign physical residential address</i>)",
                        :optional => true,
                        :condition => "__$('person_current_country').value.toLowerCase() !='malawi' && __$('person_current_country').value.toLowerCase() !='Unknown' && __$('person_physical_address_available').value =='Yes'"} %>

            </sub>