<style type="text/css">
  .left{
    float: left;
  }
  .right {
      float: right;
  }
  #details {
      width: 100%;
      border-collapse: collapse;
      margin-left: 1%;
      margin-top: 4%
  }

  #details tr:nth-child(odd){
    background: #dcdbdb;
  }
  #details td, #details th {
     border: 1px solid lightgray;
     font-size: 1.1em;
     padding: 1em;
  }
  #details th{
    background: #4c79a3;
    color:#ffffff;
    font-size: 1.2em;
    padding: 0.8em;
  }

  
</style>
<button id="signout" class="green" onmousedown="window.location ='/'" ><span>Back</span></button>
<div style="width:100%">
  <div class="left" style="width:70%; text-align:center">
        <table id="details">
              <tr><th colspan="2">Details</th></tr>
              <tr><td>Username</td><td><%= @user.username %></td></tr>
              <tr><td>First name</td><td><%= @user.first_name %></td></tr>
              <tr><td>Surname</td><td><%= @user.last_name %></td></tr>
              <tr><td>Role</td><td><%= @user.role %></td></tr>
              <tr><td>Email</td><td><%= @user.email %></td></tr>
              <tr><td>Created at</td><td><%= @user.created_at.to_date.strftime("%d/%b/%Y") rescue nil %></td></tr>
              <tr><td>Updated at</td><td><%= @user.updated_at.to_date.strftime("%d/%b/%Y") rescue nil %></td></tr>
        </table>
  </div>
  <div class="right">
        <table style="margin-top:15%">
            <tr><td style="width:100%"><button onclick="window.location='/users/<%= @user.id %>/edit'">Edit demographics</button></td></tr>
            <tr><td style="width:100%"><button style="width:100%">Block User</button></td></tr>
        </table>
  </div>
</div>

<%= render :partial => "/dc/landing_resize" %>